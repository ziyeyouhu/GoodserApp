<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical"
        android:paddingLeft="22px">

        <ImageView
            android:id="@+id/back"
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="22px"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="36px"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:gravity="center">

        <ImageView
            android:id="@+id/head"
            android:layout_width="160px"
            android:layout_height="160px"
            android:background="@mipmap/ic_head"/>

    </RelativeLayout>


    <!--手机号-->
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="620px"
            android:layout_height="88px"
            android:background="@mipmap/bg_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">


            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/ic_phone"/>


            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:background="@color/white"/>


            <co.sspp.goodserapp.weight.ClearEditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="28px"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="620px"
            android:layout_height="88px"
            android:layout_marginTop="36px"
            android:background="@mipmap/bg_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">


            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/ic_code"/>


            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:background="@color/white"/>


            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="28px"/>


            <co.sspp.goodserapp.weight.CodeButton
                android:id="@+id/bt_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:textColor="@drawable/code_text_color"
                android:textSize="24px"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="620px"
            android:layout_height="88px"
            android:layout_marginTop="36px"
            android:background="@mipmap/bg_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">


            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/ic_password"/>


            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:background="@color/white"/>


            <co.sspp.goodserapp.weight.PasswordEditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入登录密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="28px"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即视为同意"
            android:textColor="@color/white"
            android:textSize="28px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zcxy"
            android:textColor="@color/white"
            android:textSize="28px"/>

    </LinearLayout>


    <!--dasdsad-->
    <Button
        style="@style/orangeButton"
        android:id="@+id/button"
        android:layout_width="620px"
        android:layout_height="88px"
        android:layout_marginTop="36px"/>


</LinearLayout>
